<form method="post" action="/editform">
  <label for="from">From:</label><br/>
  <input type="text" id="from" name="from" required><br/>

  <label for="title">Title:</label><br/>
  <input type="text" id="title" name="title" required><br/>

  <label for="postid">ID:</label><br/>
  <input type="text" id="postid" name="postid" required><br/>

  <label for="full_text">Fill text:</label><br/>
  <textarea name="full_text" rows="8" cols="80"></textarea><br/>
  <button type="submit">Submit</button>
</form>
